---
import LoginButton from "@/app/components/login-button";
import RadixProvider from "@/app/components/radix-provider";
import RootLayout from "@/pages/_root-layout.astro";
import { Heading, Text } from "@radix-ui/themes";
import { PenToolIcon } from "lucide-react";
---

<RootLayout>
  <RadixProvider>
    <div class="flex h-screen items-center justify-center">
      <main class="mx-auto grid w-full max-w-sm gap-6 px-4 pb-32">
        <div class="flex items-center justify-center">
          <PenToolIcon className="text-accent-10 size-16" />
        </div>
        <section class="prose dark:prose-invert w-full max-w-none text-center">
          <Heading size="8" mb="2"> Excalidraw Lite </Heading>
          <Text size="2" color="gray" className="text-balance">
            A backend wrapper around the excellent open-source Excalidraw canvas
          </Text>
        </section>
        <div class="grid gap-2">
          <LoginButton provider="google" />
          <LoginButton provider="github" />
        </div>
      </main>
    </div>
  </RadixProvider>
</RootLayout>
